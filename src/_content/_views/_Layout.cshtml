    <link rel="icon" href="/img/ico/favicon.ico" type="image/x-icon">
    <link rel="manifest" href="/img/ico/site.webmanifest">
    <link rel="preconnect" href="//dotnetbirdie.github.io">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hind:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="canonical" href="https://dotnetbirdie.github.io/@(Model.Slug).html" />

    <meta name='robots' content='index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1' />

    <title>@Model.Document.Header.Title</title>

    @if (Model.Document.Header.Attributes.TryGetValue("description", out string desc))
    {
        <meta name="description" content="@desc" />
    }
    @if (Model.Document.Header.Attributes.TryGetValue("next", out string next))
    {
        <meta name="next" content="@next" />
    }

