    </header>

    <main class="flex-shrink-1 mb-auto">
        <div class="container pt-2">
            @RenderBody()
        </div>

        <div class="container d-flex flex-wrap global-links">
            <div class="col-sm-4 col-12 p-4">
                <div class="card bottomleft" aria-label="Links">
                    <div class="card-body"
                        style="height:170px;padding-left:26px;padding-top:24px;padding-right:17px;margin-bottom:24px;">
                        <h5 class="card-title">Links</h5>
                        <div class="card-text listdisplay"
                            style="height:100%;width:100%;overflow-y:auto;overflow-x:hidden;">
                            <ul>
                                <li class="mb-2"><a href="/" rel="noopener">Home</a></li>
                                <li class="mb-2"><a href="https://rmannibucau.metawerx.net/" target="_blank"
                                        rel="noopener">Java/JS Blog</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-12 p-4">
                <div class="card bottomcenter" aria-label="Archive">
                    <div class="card-body"
                        style="height:170px;padding-left:26px;padding-top:24px;padding-right:17px;margin-bottom:24px;">
                        <h5 class="card-title">Archives</h5>
                        <div class="card-text listdisplay"
                            style="height:100%;width:100%;overflow-y:auto;overflow-x:hidden;">
                            @{
                                var archives = Model.Context.Pages
                                .Where(it => it.Document.Header.Attributes.ContainsKey("archive-date"))
                                .Select(it => it.Document.Header.Attributes["archive-date"])
                                .Distinct()
                                .Select(archive =>
                                {
                                    var sep = archive.IndexOf('/');
                                    var label = new DateOnly(int.Parse(archive[0..sep]), int.Parse(archive[(sep + 1)..]),
                                                    1).ToString("MMMM yyyy");
                                    return (Slug: archive, Label: label);
                                })
                                .ToList();
                                <ul class="ftr-archives" role="list">
                                    @foreach (var archive in archives)
                                    {
                                        <li><a href="/blog/archives/@archive.Slug/1.html">@archive.Label</a></li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-12 p-4">
                <div class="card bottomright" aria-label=".NET Projects">
                    <div class="card-body"
                        style="height:170px;padding-left:26px;padding-top:24px;padding-right:17px;margin-bottom:24px;">
                        <h5 class="card-title">.NET Projects</h5>
                        <div class="card-text listdisplay"
                            style="height:100%;width:100%;overflow-y:auto;overflow-x:hidden;">
                            <ul>
                                <li class="mb-2"><a href="https://rmannibucau.github.io/Cezanne/" target="_blank"
                                        rel="noopener">CÃ©zanne</a></li>
